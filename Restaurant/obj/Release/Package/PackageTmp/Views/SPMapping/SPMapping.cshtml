
@*@{
    ViewBag.Title = "SPMapping";
}*@
@{
    Layout = null;
}
<div ng-controller="spMappingController">
    <div>
        <div class="row-fluid" ng-init="ForLoginSuccess()">
            <div class="box bornomala span12">
                <div class="box-header">
                    <h2><i class="halflings-icon tasks"></i><span class="break"></span>Product Mapping for Supplier </h2>
                </div>
                <div class="box-content">
                    <!-- code start here-->
                    <div class="col-md-4">
                        <div class="box-content">
                            <form class="form-horizontal" name="suppliersProductForm" ng-submit="insert">
                                <div class="control-group">
                                    <label class="control-label" for="display_name">Module</label>
                                    <div class="controls">
                                        <select>
                                            <option value="">Select</option>
                                            <option ng-repeat="x in a" value="{{x.SupplierId}}">{{x.SupplierName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="controls">
                                    <button class="button success btn btn-primary">Mapped to Supplier</button>
                                </div>
                            </form>
                        </div>
                    </div><!--/span-->
                    <!-- code end here-->
                </div>
            </div><!--/span-->

        </div><!--/row-->
    </div>

    <!-- show module list -->
    <div class="row-fluid module_from">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Product Mapping for Supplier
                </h2>
            </div><!-- box header -->
            <div class="box-content">
                <!-- code start here -->
                <div ng-init="GetPurchaseProductList()">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" ng-init="loadPurchaseProduct()" st-table="d" st-safe-src="a">
                        <thead>
                            <tr>
                                <th colspan="4">
                                    <input st-search placeholder="global search" class="input-sm form-control" type="search" />
                                </th>
                            </tr>
                            <tr>
                                <th>Select</th>
                                <th st-sort="ProductId">Product ID</th>
                                <th st-sort="ProductName">Product Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in d">
                                <td class="center">{{x.ProductId}}</td>
                                <td class="center">{{x.ProductName}}</td>
                                <td cs-select="row"></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="100" st-displayed-pages="7"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div><!-- box content -->
        </div><!--  box -->
    </div><!--  row-fluid -->
</div><!-- controller end-->

