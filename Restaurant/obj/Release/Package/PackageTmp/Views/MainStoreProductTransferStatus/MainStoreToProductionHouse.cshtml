@{
    Layout = null;
}
<div ng-controller="MainStoreProductTransferStatus">



    <div>
        <div class="row-fluid">
            <div class="box bornomala span12" ng-init="ForLoginSuccess()">
                <div class="box-header">
                    <h2>
                        <i class="halflings-icon tasks"></i><span class="break"></span>Main Store To Production House Product Tranfer History
                    </h2>
                </div>
                <div class="box-content">
                    <!-- code strat here-->
                    <form class="form-horizontal">


                        <!-- form date -->
                        <div class="control-group" ng-init="GetAllMainstore()">
                            <label class="control-label">Select Store</label>
                            <div class="controls">
                                <select ng-model="MainStore.MainStoreId" class="form-control selectpicker" ng-options="x.store_id as x.store_name for x in mainStore" required enter-as-tab>
                                    <option value="">Select Store</option>
                                </select>
                            </div>

                        </div>

                        <!-- form date -->
                        <div class="control-group">
                            <label class="control-label" for="datepicker1">From Date </label>
                            <div class="controls">
                                <div style=" width: 200px;">
                                    <datepicker date-format="dd-MM-yyyy" selector="form-control">
                                        <input class="form-control" ng-model="fromDate" placeholder="   Choose a date" readonly />
                                    </datepicker>
                                </div>
                            </div>
                        </div>
                        <!-- To date -->

                        <div class="control-group">
                            <label class="control-label" for="datepicker1">To Date </label>
                            <div class="controls">
                                <div style="width: 200px;">
                                    <datepicker date-format="dd-MM-yyyy" selector="form-control">
                                        <input class="form-control" ng-model="toDate" placeholder="    Choose a date" readonly />
                                    </datepicker>
                                </div>
                            </div>
                        </div>


                        <div class="controls">
                            <button class="button success btn btn-primary" ng-click="GetMainStoreInfo(toDate,fromDate,MainStore.MainStoreId)">Search</button>

                        </div>

                        <!-- table -->

                        <table class="table table-striped table-bordered" st-table="Product1" st-safe-src="Product">
                            <thead>






                            <tr>
                                <th>Product Name</th>
                                <th>Production House Name </th>
                                <th> Unit </th>
                                @*<th>Unit Price </th>*@
                                <th> Quantity </th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="row in Product1">
                                    <!-- Product Name -->
                                    <td> {{row.ProductName}}  </td>
                                    <!-- Quantity -->
                                    <td>  {{row.StoreName}}   </td>
                                    <!-- Unit -->
                                    <td> {{row.Unit}}  </td>
                                    <!-- production House Name -->
                                    <!-- UnitPrice -->
                                    @*<td> {{row.UnitPrice}} </td>*@

                                    <td>  {{row.Quantity}}  </td>

                                </tr>
                            </tbody>

                            <tfoot>

                                <tr>
                                    <td colspan="5" class="text-center">
                                        <div class="pagination pagination-centered">
                                            <div st-pagination="" st-items-by-page="10" st-displayed-pages=""></div>
                                        </div>
                                    </td>
                                </tr>

                            </tfoot>


                        </table><!-- table end-->

                    </form> <!-- end of form -->
                    <!-- code end here-->
                </div>
            </div><!--/span-->

        </div><!--/row-->
    </div>
</div>
