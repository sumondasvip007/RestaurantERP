@{
    Layout = null;
}

<div ng-controller="SellsPointController" ng-init="ForLoginSuccess()">
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="EditSellsPointDiv">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Edit Sells Point
                </h2>
            </div>
            <div class="box-content">

                <form class="form-horizontal" name="SellsPointUpdateForm" ng-init="SellsPoint">
                    <div class="form-group">
                        <label class="control-label">Sells Point Name</label>
                        <div class="controls">
                            <input type="text" class="form-control input-sm" data-ng-model="SellsPoint.SellsPointName" required enter-as-tab />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label">Select Store</label>
                        <div class="controls">
                            <select ng-model="SellsPoint.SellsPointStoreId" class="form-control selectpicker" ng-options="x.StoreId as x.StoreName for x in StoreList" required enter-as-tab>
                                @*<option value="">{{SellsPoint.SellsPointStoreName}}</option>*@
                            </select>
                        </div>
                    </div>
                    <br />
                    <toaster-container toaster-options="{'time-out': 1000}"></toaster-container>
                    <div class="form-group">
                        <div class=" controls">

                            <input type="submit" class="btn btn-primary" value="Update Sells Point" data-ng-click="UpdateSellsPoint()" />
                            <input type="submit" class="btn btn-primary" value="Cancel Edit" data-ng-click="CancelEdit()" />
                        </div>
                    </div>
                </form>
            </div>
        </div><!--/span-->
    </div>
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="SellsPointListDiv">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Sells Point Details
                </h2>
            </div>
            <div class="box-content" ng-init="GetAllSellsPoint()">
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="sellsPointList">
                        <thead>
                            <tr>
                                <th colspan="5">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="SellsPointName">Sells Point Name</th>
                                <th st-sort="SellsPointStoreName">Sells Point Store Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td class="center">{{row.SellsPointName}}</td>
                                <td class="center">{{row.SellsPointStoreName}}</td>
                                @*<td class="hidden">{{row.SellsPointStoreId}}</td>
                                    <td class="hidden">{{row.SellsPointId}}</td>*@

                                <td class="center">
                                    <a class="btn btn-info" ng-click="EditSellsPoint(row)">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" ng-click="DeleteSellsPoint(row.SellsPointId)">
                                        <i class=" halflings-icon white trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            <toaster-container toaster-options="{'time-out': 1000}"></toaster-container>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div><!--/span-->
    </div>

</div><!--/row-->