@{
    ViewBag.Title = "SPMapping";
}
@{
    Layout = null;
}
<div ng-controller="supplierProductMappingController" ng-init="initialze();">
    <div>
        <div class="row-fluid" ng-init="ForLoginSuccess()">
            <div class="box bornomala span12">
                <div class="box-header">
                    <h2>
                        <i class="halflings-icon tasks"></i><span class="break"></span>Product Mapping for Supplier
                    </h2>
                </div>
                <div class="box-content">
                    <!-- code start here-->
                    <div class="col-md-4">
                        <div class="box-content">
                            <form class="form-horizontal" name="suppliersProductForm" ng-submit="insert">
                                <div class="control-group">
                                    <label class="control-label" >Supplier </label>
                                    <div class="controls">
                                        <select ng-model="suppliersProductForm.SupplierId" ng-options="x.SupplierId as x.SupplierName for x in supplier" ng-change="getProducts(suppliersProductForm.SupplierId)" required>
                                            <option value=""> --Select-- </option>
                                            @*<option ng-repeat="s in supplier" value="{{s.SupplierId}}">{{s.SupplierName}}</option>*@
                                        </select>
                                    </div>
                                </div>
                                <div class="controls">
                                    <button class="button success btn btn-primary" ng-show="supplierMappedEnable" ng-click="Submit();">Mapped to Supplier</button>
                                </div>
                            </form>
                        </div>
                    </div><!--/span-->
                    <!-- code end here-->
                </div>
            </div><!--/span-->

        </div><!--/row-->
    </div>

    <!-- show module list -->
    <div class="row-fluid module_from">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Product Mapping for Supplier
                </h2>
            </div><!-- box header -->
            <div class="box-content">
                <!-- code start here -->
                <div ng-init="GetPurchaseProductList()">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="displayedCollection" st-safe-src="product">
                        <thead>
                            <tr>
                                <th colspan="6">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th>Select</th>
                                <th st-sort="ProductName">Product Name</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="x in displayedCollection">
                            <td class="center"><input type="checkbox" ng-model="x.IsSelected" ng-click="selectProduct(x);" /></td>
                            <td class="center">{{x.ProductName}}</td>
                        </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div><!-- box content -->
        </div><!--  box -->
    </div><!--  row-fluid -->
</div><!-- controller end-->
