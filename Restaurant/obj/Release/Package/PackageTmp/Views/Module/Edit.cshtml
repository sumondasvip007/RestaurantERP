

@{
  Layout = null;
}

<div class="row-fluid module_from" ng-init="ForLoginSuccess()">
    <div class="box bornomala span12">
        <div class="box-header">
            <h2>
                <i class="halflings-icon tasks"></i><span class="break"></span>Show All Module
            </h2>
        </div><!-- box header -->
        <div class="box-content">
            <!-- code start here -->
            <div ng-controller="showAllModule">
                <table class="table table-striped table-bordered bootstrap-datatable datatable" ng-init="dataload()" st-table="d" st-safe-src="GetAllModule">

                    <thead>
                        <tr>
                            <th colspan="5">
                                Record Per pages:
                                <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                            </th>
                        </tr>
                        <tr>
                            <th st-sort="module_name">Module Name</th>
                            <th st-sort="module_order">Order Id</th>
                            <th st-sort="module_icon">Icon</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in d  | orderBy:'module_name'">

                            <td class="center">{{x.module_name}}</td>
                            <td class="center">{{x.module_order}}</td>
                            <td class="center">{{x.module_icon}}</td>

                            <td class="center">
                                <a class="btn btn-info" href="#" ng-click="edit(x.module_id)">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                <a class="btn btn-danger" href="#" ng-click="delete(x.module_id)">
                                    <i class="halflings-icon white trash"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-center">
                                <div class="pagination pagination-centered">
                                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages=""></div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div><!-- box content -->
    </div><!--  box -->
</div><!--  row-fluid -->
