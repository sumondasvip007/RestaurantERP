
@{
    Layout = null;
}
<div>
    <div class="row-fluid" ng-init="ForLoginSuccess()">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2><i class="halflings-icon tasks"></i><span class="break"></span>User Action Mapping</h2>
            </div>
            <div class="box-content">

                <div ng-controller="UserPermissionController" ng-init="LoadInitial()">
                    <form class="form-horizontal" ng-submit="" name="UserPermissionForm">
                        <div class="control-group">
                            <label class="control-label">User Name</label>
                            <div class="controls">
                                <select data-ng-model="User.user_id" class="dropdown form-control input-sm"
                                        ng-options="user.value as user.text for user in userList" ng-change="LoadActionListForUser(User.user_id)" enter-as-tab required>
                                    <option value="">------------Select-----------</option>
                                </select>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">Filter Menu</label>
                            <div class="controls">
                                <input type="text" class="input-sm" ng-model="bagSearch" />
                            </div>
                        </div>
                        <div class="controls">
                            <div ivh-treeview="bag"
                                 @*style="max-height: 350px; overflow: auto;"*@
                                 ivh-treeview-filter="bagSearch">
                            </div>
                        </div>

                        <div class="controls">
                            <a ng-click="SaveUserPermission()" class="btn btn-primary">Save</a>
                        </div>
                    </form>
                </div>
                    </div>
                </div>

            </div>
        </div>
    @*</div>

</div>*@
