
@{
    Layout = null;
}
<div ng-controller="storeController">
    <div>
        <div class="row-fluid" ng-init="ForLoginSuccess()">
            <div class="box bornomala span12">
                <div class="box-header">
                    <h2>
                        <i class="halflings-icon tasks"></i><span class="break"></span>Store Entry Form
                    </h2>
                </div>
                <div class="box-content">

                    <!-- code start here-->
                    <div class="store_from col-md-4">
                        <div class="box-content">
                            <form class="form-horizontal" name="storeForm" ng-submit="submit()">
                                <div class="control-group">
                                    <label class="control-label">Store Name</label>
                                    <div class="controls">
                                        <input type="text" name="storeName" ng-model="store.store_name" required>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="main">Is Main Store? :</label>
                                    <div class="controls">
                                        <input type="checkbox" name="storeType" ng-model="store.is_mainStore" id="main" ng-click="makeMainStore();" >
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="house">Is Production house Store?</label>
                                    <div class="controls">
                                        <input type="checkbox" name="storeType" ng-model="store.isProductionHouseStore" id="house" ng-click="makeProductionHouseStore();" >
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="point"> Is Sells Point Store :</label>
                                    <div class="controls">
                                        <input type="checkbox" ng-model="store.IsSellsPointStore" name="storeType" id="point" ng-click="makeSellsPointStore();" >
                                    </div>
                                </div>

                                <div class="controls">
                                    <button class="button success btn btn-primary" ng-click="SelectCheckbox()">{{buttonName}}</button>
                                </div>
                            </form>
                        </div>
                    </div><!--/span-->
                    <!-- code end here-->
                </div>
            </div><!--/span-->

        </div><!--/row-->
    </div>

    <!-- show module list -->
    <div class="row-fluid module_from">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Store Information
                </h2>
            </div><!-- box header -->
            <div class="box-content">

                <!-- code start here -->
                <div ng-init="GetAllStore()">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" ng-init="dataload()" st-table="d" st-safe-src="a">
                        <thead>
                            <tr>
                                <th colspan="5">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="store_name">Store Name</th>
                                <th st-sort="IsActive">Is Main Store?</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in d">
                                <td class="center">{{x.store_name}}</td>
                                <td class="center">{{makeYesNo(x)}}</td>
                                <td class="center">
                                    <a class="btn btn-info" href="#" ng-click="edit(x.store_id)">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#" ng-click="delete(x.store_id)">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div><!-- box content -->
        </div><!--  box -->
    </div><!--  row-fluid -->
</div><!-- controller end-->
