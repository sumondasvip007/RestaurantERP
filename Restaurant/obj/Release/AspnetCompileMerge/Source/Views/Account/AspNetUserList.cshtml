@{
    Layout = null;
}

<div ng-controller="AspNetUserController" ng-init="ForLoginSuccess()">
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="UserEditHideDiv">
            <div class="box-header">
                <h2><i class="halflings-icon tasks"></i><span class="break"></span>Edit User Information</h2>
            </div>
            <div class="box-content">

                <form class="form-horizontal" name="AspNetUserForm" ng-init="AspNetUser">
                    <div class="form-group">
                        <label class="control-label">User Full Name</label>
                        <div class="controls">
                            <input type="text" class="form-control input-sm" data-ng-model="AspNetUser.UserFullName"  enter-as-tab />
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <div class="controls">
                            <input type="text" class="form-control input-sm" data-ng-model="AspNetUser.UserName" required enter-as-tab />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <div class="controls">
                            <input type="email" name="Email" class="form-control input-sm" data-ng-model="AspNetUser.Email" required enter-as-tab />
                            <p class="error" ng-show="AspNetUserForm.Email.$error.email || submitted">Please Provide correct email address</p>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <label class="control-label">Phone Number</label>
                        <div class="controls">
                            <input type="text" class="form-control input-sm" data-ng-model="AspNetUser.PhoneNo" required positive-numbers-only enter-as-tab />
                        </div>
                    </div>

                    <br />

                    @*<div class="form-group">
                            <label class="control-label">Password</label>
                            <div class="controls">
                                <input type="password" name="Password" class="form-control input-sm" ng-model="AspNetUser.Password"  ng-minlength="6" required enter-as-tab />
                                <p class="error" ng-show="AspNetUserForm.Password.$error.minlength || submitted">Password must at least be 6 digits</p>
                            </div>
                        </div>
                        <br />


                        <div class="form-group">
                            <label class="control-label">Confirm Password</label>
                            <div class="controls">
                                <input type="password" name="ConfirmPassword" class="form-control input-sm" ng-model="AspNetUser.ConfirmPassword" ng-minlength="6" required enter-as-tab ng-blur="CheckPassword()" />
                                <p class="error" ng-show="AspNetUserForm.ConfirmPassword.$error.mismatch || submitted">Password and confirm password does not match</p>
                            </div>
                        </div>
                        <br />*@
                    @*<toaster-container toaster-options="{'time-out': 1000}"></toaster-container>*@
                    <div class="form-group">
                        <div class=" controls">

                            <input type="submit" class="btn btn-primary" value="Update User" data-ng-click="UpdateUser()" />
                            <input type="submit" class="btn btn-primary" value="Cancel Edit" data-ng-click="CancelEdit()" />
                        </div>
                    </div>
                </form>
            </div>
        </div><!--/span-->
    </div>
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="UserListHideDiv">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>User Details
                </h2>
            </div>
            <div class="box-content" ng-init="AllUserList()">
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="UserList">
                        <thead>

                            <tr>
                                <th colspan="5">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="UserName">User Name</th>
                                <th st-sort="UserFullName">Full Name</th>
                                <th st-sort="PhoneNo">Phone No</th>
                                <th st-sort="Email">Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td class="center">{{row.UserName}}</td>
                                <td class="center">{{row.UserFullName}}</td>
                                <td class="center">{{row.PhoneNo}}</td>
                                <td class="center">{{row.Email}}</td>
                                <td class="center">
                                    <a class="btn btn-info" ng-click="EditUser(row)">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" ng-click="DeleteUser(row.Id)">
                                        <i class=" halflings-icon white trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            <toaster-container toaster-options="{'time-out': 1000}"></toaster-container>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div><!--/span-->
    </div>

</div><!--/row-->