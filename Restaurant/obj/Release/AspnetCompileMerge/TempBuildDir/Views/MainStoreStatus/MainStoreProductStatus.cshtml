
@{
    Layout = null;
}

<div ng-controller="MainStoreStatusController" ng-init="ForLoginSuccess()">

    <div class="row-fluid">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Main Store Product Status
                </h2>
            </div>
            <div class="box-content">
                <div class="box-content">
                    <form class="form-horizontal" name="MainStoreStatusForm">
                        <div class="form-group" ng-init="GetAllMainStoreList()">
                            <label class="control-label">Select Store</label>
                            <div class="controls">
                                <select ng-model="Store.StoreId" class="form-control selectpicker" ng-options="x.StoreId as x.StoreName for x in MainStoreList" ng-change="GetMainStoreProductQuantityList()" required enter-as-tab>
                                    <option value="">Select Store</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="MainStoreProductList" ng-init="GetMainStoreProductList()">
                            <thead>

                            <tr>
                                <th colspan="5">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="ProductName">Product Name</th>
                                <th st-sort="Unit">Unit</th>
                                @*<th st-sort="UnitPrice">Unit Price</th>*@
                                <th st-sort="Quantity">Quantity</th>
                                @*<th st-sort="TotalPrice">Total Price</th>*@
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td class="center">{{row.ProductName}}</td>
                                <td class="center">{{row.Unit}}</td>
                                @*<td class="center">{{row.UnitPrice}}</td>*@
                                <td class="center">{{row.Quantity}}</td>
                                @*<td class="center">{{row.TotalPrice}}</td>*@
                            </tr>
                            @*<tr>
                                <td style="text-align: right" colspan="4"><b>Total Amount</b></td>
                                <td ng-init="totalAmount=0">{{totalAmount}}</td>
                            </tr>*@
                            <toaster-container toaster-options="{'time-out': 1000}"></toaster-container>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                        <a id="fbplus_01" class="iframe btn btn-primary" ng-href="/MainStoreStatus/ViewPdfReportForSearchResult/?storeId={{Store.StoreId}}" ng-show="reportButton" fancyboxable>View Report</a>

                    </form>
                </div>

            </div>
        </div><!--/span-->
    </div>

</div><!--/row-->