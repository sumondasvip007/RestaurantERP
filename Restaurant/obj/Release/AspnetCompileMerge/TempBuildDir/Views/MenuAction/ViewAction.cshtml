
@{
    Layout = null;
}


<div ng-controller="viewActionController" ng-init="initialize();">


    <div>
        <div class="row-fluid" ng-init="ForLoginSuccess()">

        </div><!--/row-->
    </div>



    <!-- show action list -->
    <div class="row-fluid module_from">
        <div class="box bornomala span12">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Show Action
                </h2>
            </div><!-- box header -->
            <div class="box-content">

                <!-- code start here -->
                <div>
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="displayedCollection" st-safe-src="rowCollection">


                        <thead>
                            <tr>
                                <th colspan="6">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                         
                            <tr>
                                <th st-sort="name">Action Name</th>
                                <th st-sort="display_name">Dispalay Name</th>
                                <th st-sort="module">Module</th>
                                <th st-sort="">Is Menu</th>
                                <th st-sort="">Is In View</th>
                                <th st-sort="">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="r in displayedCollection">
                                <td class="center">{{r.name}}</td>
                                <td class="center">{{r.display_name}}</td>
                                <td class="center">{{r.module}}</td>
                                <td class="center">
                                    {{makeYesNo(r.is_in_menu)}}
                                </td>
                                <td class="center">{{makeYesNo(r.is_view)}}</td>
                                <td class="center">
                                    <a href="#/EditAction/{{r.id}}" class="btn btn-info">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#" ng-click="delete(r.id)">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages=""></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>



                

            </div><!-- box content -->
        </div><!--  box -->
    </div><!--  row-fluid -->


</div><!-- controller end-->