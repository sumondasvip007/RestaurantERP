@model dynamic

@{
    Layout = null;
}

<div class="row-fluid" ng-init="ForLoginSuccess()">
    <div class="box bornomala span12">
        <div class="box-header">
            <h2><i class="halflings-icon tasks"></i><span class="break"></span> Chalan Report
            </h2>
        </div>

        <div class="box-content" ng-controller="ChalanReport">
            <form class="form-horizontal"  ng-submit="GetAllChalanReport()">

                <br />

                <div class="control-group">
                    <label class="control-label" for="datepicker1">From Date </label>
                    <div class="controls">
                        <div style=" width: 200px;">
                            <datepicker date-format="MM/dd/yyyy" selector="form-control">
                                <input class="form-control" ng-model="FromDate" placeholder="    Choose a date" readonly required enter-as-tab />
                            </datepicker>
                        </div>
                    </div>
                </div>

                <!-- To date -->

                <div class="control-group">
                    <label class="control-label" for="datepicker1">To Date </label>
                    <div class="controls">
                        <div style="width: 200px;">
                            <datepicker date-format="MM/dd/yyyy" selector="form-control">
                                <input class="form-control" ng-model="ToDate" placeholder="    Choose a date" readonly required enter-as-tab />
                            </datepicker>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class=" controls">

                        <input type="submit" class="btn btn-primary" value="Search" data-ng-click="SearchCalanReport()" />
                    </div>
                </div>

            </form>

                
                <table class="table table-striped table-bordered" st-table="report" st-safe-src="chalanReport">
                    <thead>


                        <tr>
                            <th colspan="6">
                                Record Per pages:
                                <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                            </th>
                                    </tr>
                    <tr>
                        <th>FromStore</th>
                        <th>Supplier</th>
                        <th>ToStore</th>
                        <th> Date </th>
                        <th>ReportName </th>
                        <th> Action </th>

                    </tr>
                    </thead>
                    <tbody style="height: 500px; overflow-y: scroll;">
                        <tr ng-repeat="row in report">
                            <td> {{row.FromStore}} </td>
                            <td> {{row.Supplier}} </td>
                            <td> {{row.ToStore}} </td>
                            <td> {{row.Date}} </td>
                            <td> {{row.ReportName}} </td>
                            <td>


                                @*<a class="fancybox" href="~/Image/myfilename.pdf">Open pdf</a>*@
                                <a class="iframe  btn btn-success" href="~/pdfReport/{{row.ReportName}}.pdf" fancyboxable><i class="halflings-icon white zoom-in"></i> </a>
                            </td>

                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-center">
                                <div class="pagination pagination-centered">
                                    <div st-pagination="" st-items-by-page=itemsByPage st-displayed-pages=""></div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table><!-- table end-->
        </div><!--/span-->
            </div><!--/row-->
        </div>
 
