
@{
    Layout = null;
}

<div ng-controller="showProductionHouse">

    <div class="row-fluid module_from">
    <div class="box bornomala span12">
        <div class="box-header">
            <h2>
                <i class="halflings-icon tasks"></i><span class="break"></span>Production House List
            </h2>
        </div><!-- box header -->
        <div class="box-content">

            <!-- code start here -->
            <div ng-init="GetAllProductionHouse()">

                <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="a" st-safe-src="ProductionHouse">
                    <thead>
                        <tr>
                            <th colspan="5">
                                Record Per pages:
                                <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                            </th>
                        </tr>
                        <tr>
                            <th st-sort="module_name">Production House Name</th>
                            <th st-sort="module_order">Main Store </th>
                            <th st-sort="module_icon">Own Store </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in a  | orderBy:'ProductionHouseId'">

                            <td class="center">{{x.ProductionHouseName}}</td>
                            <td class="center">{{x.MainStore.Name}}</td>
                            <td class="center">{{x.OwnStore.Name}}</td>
                            <td class="center">
                                <a class="btn btn-info" href="#" ng-click="edit(x.ProductionHouseId)">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-center">
                                <div class="pagination pagination-centered">
                                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    </div>
   </div>
