@{
    Layout = null;
}
<!DOCTYPE html>
<div ng-controller="productSoldController">
    <div>
        <div class="row-fluid" ng-init="ForLoginSuccess()">
            <div class="box bornomala span12">
                <div class="box-header">
                    <h2>
                        <i class="halflings-icon tasks"></i><span class="break"></span>Product Selling Form
                    </h2>
                </div>
                <div class="box-content">
                    <!-- code strat  here-->
                    <div class="box-content">

                        <form class="form-horizontal" name="ProductionHouse">

                            <!-- Get All Sells Point -->
                            <div class="control-group" ng-init="GetAllSellsPoint()">
                                <label class="control-label" for="selectError3">Sells Point</label>
                                <div class="controls">
                                    <select id="selectError3" ng-model="sellspoint" ng-options="x.store_id as x.store_name for x in sellsPointList" @*ng-change="ProductLoad()"*@ required>
                                        <option value="">Select Sell Point</option>
                                    </select>

                                </div>
                            </div>


                            @*<div class="control-group">
                                <label class="control-label">Select Group</label>
                                <div class="controls" ng-init="getGroups()">
                                    <select ng-model="GroupId" class="form-control selectpicker" name="GroupId"
                                            ng-options="x.GroupId as x.GroupName for x in groupList" required enter-as-tab>
                                        <option value="">--Select Group--</option>
                                    </select>
                                </div>
                            </div>*@

                            <div class="control-group">
                                <label class="control-label">Select Shift</label>
                                <div class="controls" ng-init="getShifts()">
                                    <select ng-model="ShiftId" class="form-control selectpicker" name="ShiftId"
                                            ng-options="x.ShiftId as x.ShiftName for x in shiftList" required enter-as-tab>
                                        <option value="">--Select Shift--</option>
                                    </select>
                                </div>
                            </div>

                            @*<div class="control-group">
                                <label class="control-label" for="datepicker1">Date </label>
                                <div class="controls">
                                    <div style="width: 200px;">
                                        <datepicker date-format="yyyy-MM-dd" selector="form-control">
                                            <input class="form-control" ng-model="FromDate" placeholder="    Choose a date" readonly required enter-as-tab/>
                                        </datepicker>
                                    </div>
                                </div>

                            </div>*@
                            <div class="form-group">
                                <div class=" controls">

                                    <input type="submit" class="btn btn-primary" value="Search" ng-click="ProductLoad()" />
                                </div>
                            </div>
                            <br/>

                            @*<form ng-submit="addNew()">*@
                            <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="Product">
                                <thead>
                                    <tr>
                                        <th colspan="6">
                                            Record Per pages:
                                            <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                            <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                        </th>
                                </tr>
                                <tr>
                                    <th>Select</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Available Quantity</th>
                                    <th>Unit</th>
                                    <th>Unit Price</th>
                                </tr>
                                </thead>
                                <tbody ng-init="getUnits()">
                                <tr ng-repeat="product in rowCollection">
                                    <td>
                                        <input type="checkbox" ng-model="product.selected" ng-change="selectProduct(product)"/>
                                    </td>

                                    <td class="center">
                                        <p>{{product.ProductName}}</p>
                                        <input type="hidden" ng-model="product.ProductInformation.ProductId"/>
                                    </td>

                                    <td>
                                        <input type="text" name="moduleName"
                                               ng-model="product.Qty[$index]"
                                               ng-disabled="!product.selected" positive-numbers-only
                                               ng-change="checkValidation($index,product,sellspoint)">
                                        <input type="hidden" ng-model="product.Quantity"/>

                                    </td>
                                    <td class="center">
                                        <p>{{product.AvailableQuantity}}</p>
                                        <input type="hidden" ng-model="product.ProductInformation.AvailableQuantity"/>
                                    </td>
                                    <td class="center">
                                        <p>{{product.Unit}}</p>
                                        <input type="hidden" ng-model="product.ProductInformation.unit"/>
                                    </td>
                                    <td class="center">
                                        <p>{{product.UnitPrice}}</p>
                                        <input type="hidden" ng-model="product.ProductInformation.unitprice"/>
                                    </td>
                                </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6" class="text-center">
                                            <div class="pagination pagination-centered">
                                                <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <!-- button -->
                            <div class="controls">
                                <button class="button success btn btn-primary" ng-click="ProductSoldButton()">Product Sold</button>
                            </div>
                            <!-- button end -->
                        </form>

                    </div> <!-- box content end -->
                </div><!--/span-->
                <!-- code end here-->
            </div>
        </div><!--/span-->

    </div><!--/row-->
</div>

