
@{
    Layout = null;
}


<div ng-controller="OpeningProductBalanceInStoreController" ng-init="ForLoginSuccess()">
    <div class="row-fluid">
        <div class="box bornomala span12" @*ng-hide="EditSellsPointDiv"*@>
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Opening Product Balance In Store
                </h2>
            </div>
            <div class="box-content">

               
                 <form class="form-horizontal" name="OpeningProductBalanceInStoreForm" ng-init="">
                    <div class="form-group" ng-init="GetAllStoreList()">
                        <label class="control-label">Select Store</label>
                        <div class="controls">
                            <select ng-model="Store.StoreId" class="form-control selectpicker" ng-options="x.StoreId as x.StoreName for x in StoreList" required enter-as-tab>
                                <option value="">Select Store</option>
                            </select>
                        </div>
                    </div>
                     <br/>
                     <div class="control-group">
                         <label class="control-label" for="datepicker1">Date </label>
                         <div class="controls">
                             <div style="width: 200px;">
                                 <datepicker date-format="yyyy-MM-dd" selector="form-control">
                                     <input class="form-control" ng-model="FromDate" placeholder="    Choose a date" readonly required enter-as-tab />
                                 </datepicker>
                             </div>
                         </div>

                     </div>
                     <br />
                    <div class="box-content" ng-init="">
        <div class="box-content">

            <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="ProductList">
                <thead>
                    <tr>
                        <th colspan="5">
                            Record Per pages:
                            <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                            <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                        </th>
                    </tr>
                    <tr>
                        <th>Select</th>
                        <th>Product Name</th>
                        <th>Opening Balance</th>
                        <th>Unit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="OpeningBalanceProductList in rowCollection track by $index">
                        <td>
                            <input type="checkbox" ng-checked="checked" ng-model="OpeningBalanceProductList.selected" ng-click="selectProduct(OpeningBalanceProductList,$index,$event)" />
                        </td>
                        <td class="center">
                            <input type="hidden" ng-model="OpeningBalanceProductList.ProductId" required />
                            {{OpeningBalanceProductList.ProductName}}


                        </td>
                        <td>
                            <input type="text" class="form-control" ng-disabled="!OpeningBalanceProductList.selected" ng-required="OpeningBalanceProductList.OpeningBalance" ng-model="OpeningBalanceProductList.OpeningBalance" ng-init="OpeningBalanceProductList.OpeningBalance=''" positive-numbers-only />
                        </td>
                      
                        <td>
                            <input type="text" class="form-control" ng-model="OpeningBalanceProductList.Unit" ng-disabled="!OpeningBalanceProductList.selected" readonly ng-required="OpeningBalanceProductList.Unit" />

                        </td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-center">
                            <div class="pagination pagination-centered">
                                <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>


        </div>

    </div>
    <toaster-container toaster-options="{'time-out': 1000}"></toaster-container>
    <div class="form-group">
        <div class=" controls">

            <input type="submit" class="btn btn-primary" value="Save" data-ng-click="SaveOpeningProductBalance()" />

        </div>
    </div>
                </form>
            </div>
        </div><!--/span-->
    </div>

</div><!--/