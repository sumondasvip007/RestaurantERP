
@{
    Layout = null;
}


<div ng-controller="GroupAndShiftMappingController" ng-init="ForLoginSuccess()">
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="EditGroupAndShiftMappingDiv">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Edit Group And Shift Mapping
                </h2>
            </div>
            <div class="box-content">

                <form class="form-horizontal" name="GroupAndShiftMappingForm" ng-init="GroupAndShiftMapping">
                    <div class="control-group">
                        <label class="control-label">Select Shift</label>
                        <div class="controls" ng-init="getShifts()">
                            <select ng-model="GroupAndShiftMapping.ShiftId" class="form-control selectpicker" name="ShiftId"
                                    ng-options="x.ShiftId as x.ShiftName for x in shiftList" required enter-as-tab>
                                <option value="">--Select Shift--</option>
                            </select>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Select Group</label>
                        <div class="controls" ng-init="getGroups()">
                            <select ng-model="GroupAndShiftMapping.GroupId" class="form-control selectpicker" name="GroupId"
                                    ng-options="x.GroupId as x.GroupName for x in groupList" required enter-as-tab>
                                <option value="">--Select Group--</option>
                            </select>
                        </div>
                    </div>


                    @*<div class="control-group">
                        <label class="control-label" for="datepicker1">Date </label>
                        <div class="controls">
                            <div style="width: 200px;">
                                <datepicker date-format="yyyy-MM-dd" selector="form-control">
                                    <input class="form-control" ng-model="FromDate"  placeholder="    Choose a date" readonly required enter-as-tab />
                                </datepicker>
                            </div>
                        </div>
                    </div>*@
                    <br />

                    <div class="form-group">
                        <div class=" controls">

                            <input type="submit" class="btn btn-primary" value="Update" data-ng-click="UpdateGroupAndShiftMapping()" />
                            <input type="submit" class="btn btn-primary" value="Cancel" data-ng-click="CancelEdit()" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="box bornomala span12" ng-hide="GroupAndShiftMappingListDiv">
            <div class="box-header">
                <h2>
                    <i class="halflings-icon tasks"></i><span class="break"></span>Group And Shift Mapping List
                </h2>
            </div>
            <div class="box-content" ng-init="GetAllGroupAndShiftMapping()">
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable" st-table="rowCollection" st-safe-src="groupAndShiftMappingList">
                        <thead>
                            <tr>
                                <th colspan="4">
                                    Record Per pages:
                                    <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <div style="float: right;text-align: right;">  Search:<input st-search="" class="form-control" placeholder="global search ..." type="text" /></div>
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="Date">Date</th>
                                <th st-sort="Day">Day</th>
                                <th st-sort="Night">Night</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td class="center">{{row.Date}}</td>
                                <td class="center">{{row.Day}}</td>
                                <td class="center">{{row.Night}}</td>


                                <td class="center">
                                    <a class="btn btn-info" ng-click="EditGroupAndShiftMapping(row)">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" ng-click="DeleteGroupAndShiftMapping(row.GroupMappingId)">
                                        <i class=" halflings-icon white trash">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                            @*<toaster-container toaster-options="{'time-out': 1000}"></toaster-container>*@
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="pagination pagination-centered">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="4"></div>
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div><!--/span-->
    </div>

</div><!--/ro